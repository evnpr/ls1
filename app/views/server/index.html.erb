<span id="cursortable" style="cursor:pointer"><a onClick="showTable()">see list of your apps?</a></span>

<div  id="tableserver" style="display:none">
<table border="2" cellpadding="15">
<tr>
<th>Apps Name</th>
<th>Development Server</th>
<th>Production  Server</th>
</tr>

<% if @apps %>
    <% @apps.each do |a| %>
    <tr>
        <td><font color="red"><%= a.virtual_name %></font></td>
        <% if a.server.nil? %>
            <td></td>
            <td></td>
        <% else %>
            <td><font color="blue"><%= a.server.devserver %></font></td>
            <td><font color="brown"><%= a.server.prodserver %></font></td>        
        <% end %>
    </tr>
    <% end %>
<% end %>

</table>
</div>


<script type="text/javascript" charset="utf-8">
    function showTable(){
        document.getElementById("tableserver").style.display="block";
        document.getElementById("cursortable").style.display="none";
    }

    
</script>
