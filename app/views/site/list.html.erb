    <form action="/site/renamefile" method="post" accept-charset="utf-8" style="float:right">
    <input type="text" name="oldname" placeholder="old file"/>
    <input type="text" name="newname" placeholder="new file"/>
    <input type="hidden" name="r" value="<%= "#{@current_path}" %>" />
    <p><input type="submit" value="rename file" class="btn"></p>
    </form>

    <form action="/site/newfile" method="post" accept-charset="utf-8" style="float:right">
    <input type="text" name="newname" placeholder="new file"/>
    <input type="hidden" name="r" value="<%= "#{@current_path}" %>" />
    <p><input type="submit" value="create new file" class="btn"></p>
    </form>
<br>
<br>
<% @listfolder.each do |l| %>
<% l.slice! "/var/www/ls/upload/#{@name}" %>
<p><a href="<%= "/list/?r=#{@current_path}-__-#{l.delete"/"}" %>">+ <%= l %></a></p>
<% end %>


<% @listfile.each do |l| %>
<% l.slice! "/var/www/ls/upload/#{@name}" %>
<p><a href="<%= "/content/?r=#{@current_path}-__-#{l.delete"/"}" %>">- <%= l %></a></p>
<% end %>

<% if @pull %>
    <form action="/site/githubpull" method="post" accept-charset="utf-8">
    <input type="hidden" name="l" value="<%= @apps_name %>" />
    <input type="hidden" name="r" value="<%= "#{request.protocol}#{request.host_with_port}#{request.fullpath}" %>" />
    <p><input type="submit" value="pull from github" class="btn"></p>
    </form>
<% end %>

